<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/bgg">

    <!-- Your other views/components here -->

    <ImageView
        android:id="@+id/galidah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google"
        android:layout_marginTop="-50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/bggalidah" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/lidah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/galidah"
        android:layout_marginBottom="49dp"
        android:src="@drawable/bglidahklecil" />

    <TextView
        android:id="@+id/textutama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Masuk Akun Saya"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"></TextView>

    <ImageView
        android:id="@+id/pohon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textutama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/phon"></ImageView>

    <TextView
        android:id="@+id/textdua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pohon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="@+id/pohon"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Masuk melalui:"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"></TextView>

    <Button
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textdua"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="@+id/textdua"
        android:background="@drawable/googleg"></Button>

    <Button
        android:id="@+id/apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textdua"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_alignParentTop="@+id/textdua"
        android:background="@drawable/apple1x"></Button>

    <TextView
        android:id="@+id/texttiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="@+id/apple"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Atau masuk melalui email/nomor hp:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12dp"></TextView>

    <TextView
        android:id="@+id/emailhp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttiga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="@+id/texttiga"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Email/ HP"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/sandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kata Sandi"
        android:layout_below="@+id/input1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input2"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Lupa kata sandi?"
        android:textColor="#2291AF"></TextView>

    <TextView
        android:id="@+id/belumakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Belum memiliki akun?"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/belumakun"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Daftar"
        android:textAlignment="center"
        android:textColor="#2291AF"></TextView>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lupa"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="30dp"
        android:text="Masuk"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@drawable/bgsubmit"
        android:textColor="@color/white"></Button>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.5dp"
        android:layout_below="@+id/input2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:text="Ingat saya"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/emailhp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/bgtextinput"></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/sandi"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgtextinput"></com.google.android.material.textfield.TextInputEditText>

</RelativeLayout>
